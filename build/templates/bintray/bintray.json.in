{
    "package": {
        "name": "dogen",
        "repo": "dogen",
        "subject": "mcraveiro",
        "desc": "The Domain Generator - Generates C++-11 source code for domain driven development.",
        "website_url": "https://github.com/DomainDrivenConsulting/dogen",
        "issue_tracker_url": "https://github.com/DomainDrivenConsulting/dogen/issues",
        "vcs_url": "https://github.com/DomainDrivenConsulting/dogen",
        "github_use_tag_release_notes": true,
        "licenses": ["GPL-3.0"],
        "labels": ["code generation"],
        "public_download_numbers": true,
        "public_stats": true
    },
    "version": {
        "name": "${DOGEN_VERSION}",
        "desc": "Sprint ${DOGEN_MINOR_VERSION}",
        "released": "${BUILD_DATE}",
        "vcs_tag": "v${DOGEN_VERSION}",
        "gpgSign": false
    },

    "files":
        [
            { "includePattern": "${DOGEN_PACKAGE_DIR}/*.deb" },
            { "includePattern": "${DOGEN_PACKAGE_DIR}/*.dmg" }
        ],
    "publish": true
}
